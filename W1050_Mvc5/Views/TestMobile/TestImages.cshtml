@{
    Layout = null;
    string id = ViewBag.ID;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, minimum-scale=0.1">
    <title>@(id)</title>
    

    <style>
        .box { 
            display: table-cell;
            vertical-align:middle; 
            text-align:center; 
            *display: block;
            *font-size: 175px;
            *font-family:Arial;
            width:100%;
            height:100%;
        }
        .box img {
            vertical-align:middle;
        }
    </style>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script>
        $(document).ready(function () {
            var img = document.getElementById("img");

            var imgHeight = img.height;
            var screenHeight = window.screen.height;
            var boxHeigth = Math.max(imgHeight, screenHeight);

            console.log("Image Heigth:", imgHeight);
            console.log("Screen Heigth:", screenHeight);
            console.log("Box Heigth:", boxHeigth);

            $(".box").css("height", boxHeigth);
        });
    </script>
</head>
<body style="margin: 0px;background: #0e0e0e;">
    <div class="box">
        <img id="img" style="-webkit-user-select: none;max-width: 100%;" src="@(id)">
    </div>
</body>
</html>
